            {
                <div class="col-lg-4 col-md-4" style="height:200px;margin-top:100px">

                    <img class="img img-responsive cimg" src="@Url.Content(item.pro_image)" style=" height:100%;width:100% ;border-radius:50px 50px 50px 50px" />
                    <h3 style="color:#808080; font-family:'Arial Rounded MT';text-align:center">@item.pro_name <small>@item.pro_price Rs</small></h3>
                    <h4 text-align:center"> 
                    <a class="btn btn-success btn-sm" href="@Url.Action("Adtocart", new { id = @item.pro_id })"><i style="font-size:24px" class="fa">&#xf07a;</i>Add to Cart</a></h4>

